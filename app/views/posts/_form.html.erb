<div class="row">
  <div class="well span8">
    <% if @post.errors.any? %>
      <div class="alert alert-error">
        <ul>
          <% @post.errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for @post do |f| %>
      <div class="control-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="control-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 5 %>
      </div>
      <div class="control-group">
        <%= f.label :url %>
        <%= f.text_field :url %>
      </div>
      <%= f.submit "Create Post", class: 'btn-btn-primary' %>
    <% end %>
  </div>
</div>
