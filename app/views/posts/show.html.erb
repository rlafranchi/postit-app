<p>
  <%= render @post.categories %>
</p>

<%= render 'shared/content_title', title: @post.title %>

<p>
  <%= @post.description %>
</p>

<h5>Add a Comment</h5>
<%= form_for [@post, @comment] do |f| %>
  <%= f.text_area :body %>
  <br />
  <%= f.submit "Add Comment", class: 'btn btn-primary' %>
<% end %>
