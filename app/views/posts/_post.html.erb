<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: 'post'  do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br />
    <% end %>
    Votes: <%= post.total_votes %>
    <% if logged_in? %>
      <br />
      <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>
  <div class='span8 well'>
    <% if logged_in? && post.creator == current_user %>
      <p class='pull-right'>
        [<%= link_to "Edit Post", edit_post_path(post) %>]
      </p>
    <% end %>
    <%= render post.categories %>
    <h3><%= link_to post.title, post_path(post) %></h3>
    <h5>URL: <%= link_to post.url, fix_url(post.url) %></h5>
    <p><%= post.description[0..25] %></p>
    <p>
      <span class='quiet'>posted by</span>
      <small>at <%= display_datetime(post.created_at) %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
    </small>
  </div>
</div>
